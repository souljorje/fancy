mixin styles(...styles)
	each css in styles
		link(rel="stylesheet", href=css)

mixin scripts(...scripts)
	each js in scripts
		script(src=js)

mixin description(desc)
	meta(name="description" content=desc)

mixin keywords(keys)
	meta(name="keywords" content=keys)

mixin social(items)
	each item in items 
		li
			a(href=item.href, data-target='_blank')
				img(src=item.src, alt=item.alt)

mixin images-popup(items)
	each item in items
		a(href='../img/popup/'+item+'.png').images-popup
			img(src='../img/popup/'+item+'-prew.png', alt="fancy")
		|
		|

mixin list(...names)
	ol
		each name in names 
			li=name
