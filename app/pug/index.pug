extends include/template

block title
	title ЖК Фэнси
block description
	+description('Ремонтные работы для жителей ЖК "Фэнси"')
block keywords
	+keywords('Фэнси, Ремонт, Тюмень')

block css
	// build:css vendor.min.css
	+styles('libs/magnific-popup/dist/magnific-popup.css', 'libs/slick-carousel/slick/slick.css', 'libs/slick-carousel/slick/slick-theme.css')
	// endbuild
	// build:css main.min.css
	+styles('css/fonts.css', 'css/main.css')
	// endbuild

block content
	header
		.container
			.contacts
				p г.Тюмень, ул.Тимирязева 9
				p тел.
					a(href="+79224850000" type="tel") 8 999 999 9999
			.social
				p При поддержке
				a(href="https://vk.com/")
					img(src='../img/icons/vk.png' alt='vk')
	main
		.container
			h1 Вы уже купили новостройку в жилом комплексе "Фэнси" и задумываетесь о ремонте?
			.offer
				h3 Уникальное предложение
				p Ремонт квартиры, точно в срок, #[br] по фиксированной цене со скидкой
				button(href='#form-popup').popup-with-form Узнать
	.work
		.container
			h2 Наши последние работы
			.work-slider
				.work-item
					.work-item-images
						|
						|
						+images-popup(['1-1', '1-2', '1-3', '1-4'])
					.work-item-content
						p #[b Адрес:] ул.Моторостроителей 43
						p #[b Вид ремонта:] Комплекс "Стены"
						.work-item-cost
							p Стоимость материалов: #[b 38 000 рублей]
							p Срок выполения работ: #[b 3 дня]
							p Прощадь: #[b 58м#[sup 2]]
							p Стоимость работ: #[b 8 000 рублей]
						.works
							p Перечень работ:
							ul
								+list("Покраска стен", "Ремонт санузла", "Электромонтажные работы", "Выравнивание пола и стен","Настил полового покрытия","Монтаж натяжных потолков")

				.work-item
					.work-item-images
						|
						|
						+images-popup(['1-1', '1-2', '1-3', '1-4'])
					.work-item-content
						p #[b Адрес:] ул.Моторостроителей 43
						p #[b Вид ремонта:] Комплекс "Стены"
						.work-item-cost
							p Стоимость материалов: #[b 38 000 рублей]
							p Срок выполения работ: #[b 3 дня]
							p Прощадь: #[b 58м#[sup 2]]
							p Стоимость работ: #[b 8 000 рублей]
						.works
							p Перечень работ:
							ul
								+list("Покраска стен", "Ремонт санузла", "Электромонтажные работы", "Выравнивание пола и стен","Настил полового покрытия","Монтаж натяжных потолков")

				.work-item
					.work-item-images
						|
						|
						+images-popup(['1-1', '1-2', '1-3', '1-4'])
					.work-item-content
						p #[b Адрес:] ул.Моторостроителей 43
						p #[b Вид ремонта:] Комплекс "Стены"
